<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DarfBank.Views.Dash.login"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout>
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowSpacing="20" Padding="20,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Path Grid.Row="0" Margin="-20,0" Data="m132.34,154.23002l209.00002,0l0,0.66666c-66.50001,28 -156.50001,72.87853 -209.00002,96.76573l0,-97.43239z"
                      Stroke="#DBE9F7" Fill="#DBE9F7" HeightRequest="220" Aspect="Fill" ></Path>

                <Image  Grid.Row="0" Margin="-18,-20,0,0" Source="Recurso2.png" Aspect="AspectFit" HeightRequest="180" WidthRequest="150" VerticalOptions="Start" HorizontalOptions="Start" ></Image>
                <Label Grid.Row="1" Text="Bienvenido a nuestra" Margin="0,-45,0,0" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalOptions="CenterAndExpand"></Label>
                <Label Grid.Row="2" Margin="0,-25,0,0" FontSize="20" Text="sucursal electronica" TextColor="Black"  HorizontalOptions="CenterAndExpand"></Label>
                <Entry Grid.Row="3" PlaceholderColor="SlateGray" x:Name="txtUser" TextColor="Black" Placeholder="Ingrese su usuario" Keyboard="Email" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></Entry>
                <Entry Grid.Row="4" Placeholder="Ingrese su clave" x:Name="txtPass" TextColor="Black" PlaceholderColor="SlateGray" IsPassword="True" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></Entry>
                <Button Grid.Row="5" TextColor="Black" Text="Entrar" Clicked="Button_Clicked" FontAttributes="Bold" BackgroundColor="#DBE9F7" CornerRadius="20" Margin="0,10,0,0" AutomationProperties.IsInAccessibleTree="False"></Button>
                
                <Button Grid.Row="6" TextColor="Black" Margin="0,-10,0,15" Padding="5" Text="Crear una cuenta por primera vez" Clicked="NewUser_Clicked" FontAttributes="Bold" BackgroundColor="#DBE9F7" CornerRadius="20"  AutomationProperties.IsInAccessibleTree="False"></Button>
                <Button Grid.Row="7" TextColor="Black" Margin="0,-25,0,0" Text="Recuperar mi contraseña" Clicked="Button_Clicked_Recuperar" FontAttributes="Bold" BackgroundColor="#DBE9F7" CornerRadius="20"  AutomationProperties.IsInAccessibleTree="False"></Button>
               
                <Path Grid.Row="10" Margin="-20,0" Data="m333.5114,204.27502l115.48359,-59l-0.00813,123.08816c-101.06176,0.76114 -113.03789,-0.51177 -246.99185,-0.49297l131.51639,-63.59519z"
                      Stroke="#DBE9F7" Fill="#DBE9F7" HeightRequest="143" Aspect="Fill" ></Path>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>