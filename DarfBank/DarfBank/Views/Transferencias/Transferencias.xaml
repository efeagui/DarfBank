<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DarfBank.Views.Transferencias.Transferencias">
    <ContentPage.Content>
        <StackLayout Margin="20" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="10">
            <Frame x:Name="frame" HeightRequest="350" HasShadow="True" Padding="0" CornerRadius="10" BackgroundColor="White">
                <Grid HorizontalOptions="FillAndExpand" Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    
                    <Label Grid.Row="3" TextColor="#0C1F4B" Grid.Column="0" Text="Transferencia Bancaria" FontSize="20" FontAttributes="Bold" HorizontalOptions="Start" VerticalOptions="Start"></Label>

                    <Entry Grid.Row="5" Grid.ColumnSpan="2" TextColor="#0C1F4B" x:Name="cuentaOrigen" Placeholder="Ingrese Número de Cuenta Origen" FontSize="16" FontAttributes="Bold"/>
                    <Entry Grid.Row="6" Grid.ColumnSpan="2" TextColor="#0C1F4B" x:Name="cuentaDestino" Placeholder="Ingrese Número de Cuenta Destino" FontSize="16" FontAttributes="Bold"/>
                    <Entry Grid.Row="7" Grid.ColumnSpan="2" TextColor="#0C1F4B" x:Name="cantidadTransferir" Placeholder="Ingrese cantidad a Transferir" FontSize="16" FontAttributes="Bold" Keyboard="Numeric"/>
                    


                    <Button Grid.Row="11" x:Name="transferir" Clicked="transferir_Clicked" Grid.ColumnSpan="2" HeightRequest="70" TextColor="#ffffff" BackgroundColor="#0C1F4B" Text="REALIZAR TRANFERENCIA" FontSize="14" FontAttributes="Bold" CornerRadius="10"></Button>
                </Grid>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>